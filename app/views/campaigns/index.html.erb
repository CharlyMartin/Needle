<div class="wrapper-grey">
  <div class="container" id="categories">
    <div class="container" id="categories">
      <h2 class="discover-titles">CATEGORIES</h2>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="categories-cards">
            <% @categories.each do |category| %>
              <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                <div class="flipper">
                  <div class="front">
                    <%= link_to category.name, category_path(category.id) %>
                  </div>
                  <%=link_to category_path(category.id) do %>
                  <div class="back">
                    <p><%= pluralize category.campaigns.active.count, 'project' %> </p>
                  </div>
                  <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <hr>
    </div>
  </div>

  <div class="container" id="last">
    <h2 class="discover-titles">LAST MINUTE</h2>
    <%= render "dashboard/campaigns/cards", campaigns: @last_minute_campaigns %>
    <hr>
  </div>

  <div class="container" id="trends">
    <h2 class="discover-titles">TRENDS</h2>
    <%= render "dashboard/campaigns/cards", campaigns: @campaigns_trends %>
    <hr>
  </div>

  <div class="container">
    <h2 class="discover-titles">ALL</h2>
    <%= render "dashboard/campaigns/cards", campaigns: @campaigns %>
    <hr>
  </div>
</div>



