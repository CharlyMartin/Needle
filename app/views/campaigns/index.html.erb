


<div class="container">
  <% @campaigns.each do |campaign| %>

      <% if campaign.active? || campaign.in_production? %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="img-place">

            <% if campaign.photos? %>
              <%= cl_image_tag campaign.photos.last.path, width: 200, height: 300, crop: :fill %>
          </div>
          <div class="caption">
            <h3><%= campaign.title %></h3>
            <p> <strong> Price : </strong> <%= campaign.price %> $ </p>
            <p> <strong> Items: </strong> <%= campaign.orders.count %> / <%= campaign.batch_size  %> </p>
            <div class="progress">

              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: <%= campaign.orders.count * 100 / campaign.batch_size %>%">
              <span class="sr-only">40% Complete (success)</span>
              </div>
            </div>
            <p> <strong> Days left : </strong> <%=  campaign.days_left %></p>
            <% end %>
            <%= link_to "Details", dashboard_campaign_path(campaign), {class: "btn btn-primary"} %>
            <% end %>
          </div>
        </div>
      </div>

  <% end %>
</div>














