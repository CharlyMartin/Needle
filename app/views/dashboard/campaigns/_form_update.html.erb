<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for @campaign, url: dashboard_campaign_path, method: :patch do |f| %>
        <%= f.error_notification %>
        <%= f.input :title, label: "Your campaign's title" %>
        <%= f.input :description, label: "Give the best description you can" %>
        <%= f.input :spec, label: "Product specs", placeholder: "ex: coton: 20%, wool: 80%, ..." %>
        <%= f.input :photos, label: "Provide your best shots", as: :attachinary %>
        <div class="text-center">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
