<div class="wrapper-grey">
  <div class="container">
    <div class="row">
     <div class="col-md-6 col-md-offset-3">
       <%= simple_form_for @campaign, url: dashboard_campaigns_path, method: :post do |f| %>
        <%= f.error_notification %>
        <div data-toggle="tooltip" data-placement="left" title="This title will appear on all campaign's cards">
          <%= f.input :title, label: "Your campaign's title" %>
        </div>
        <div data-toggle="tooltip" data-placement="right" title="The batch-size is correlated with your product's type and your reputation.">
          <%= f.input :batch_size, collection: [150, 250, 300] %>
        </div>
        <div class="bonjour" data-toggle="tooltip" data-placement="left" title="This is the duration of the campaign.">
          <%= f.input :duration, label: 'Number of days', collection: [10, 20, 30] %>
        </div>
        <div data-toggle="tooltip" data-placement="right" title="Add a short description of yourself as a fashion designer.">
          <%= f.input :description, label: "Give the best description you can" %>
        </div>
        <div data-toggle="tooltip" data-placement="left" title="Give as much information about your product as you can.">
          <%= f.input :spec, label: "Product specs", placeholder: "ex: coton: 20%, wool: 80%, ..." %>
        </div>

        <div class="bonjour" data-toggle="tooltip" data-placement="right" title="Please give an estimation of the product price.">
          <%= f.input :price %>
        </div>

        <%= f.simple_fields_for :cat do |c| %>
          <%= c.input :cat, collection: @categories.pluck(:name) %>
        <% end %>
        <%= f.input :gender, label: "Who cares ?", collection: ["Men", "Women", "Both"] %>
        <div class="bonjour" data-toggle="tooltip" data-placement="left" title="Give up to 4 photos of your product">
          <%= f.input :photos, as: :attachinary %>
        </div>
         <div class="text-center">
           <%= f.button :submit, class: "btn btn-default" %>
         </div>
         <% end %>
       </div>
    </div>
  </div>
</div>
