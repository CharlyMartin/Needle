<div class="fluid-container">
  <div class="row">
    <div class="col-sm-12">
     <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="carousel-caption">
            <h2>My first creation</h2>
            <%= image_tag 'home/fashion-1.png', alt:'' %>
          </div>
        </div>
        <div class="item">
          <div class="carousel-caption">
            <h2>My second creation</h2>
            <%= image_tag 'home/fashion-2.png', alt:'' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 block-1">
      <span>Who wear<br>what</span>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <div class="col-lg-8 block-2">
          <span><br>our designer of<br>the month</span>
        </div>
        <div class="col-lg-4 block-3">
          <span>Last<br>minute</span>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4 block-4">
          <span><i class="fa fa-instagram" aria-hidden="true"></i><br>Instagram gallery</span>
        </div>
        <div class="col-lg-8 block-5">
          <span>Our<br>selection</span>
        </div>
      </div>
    </div>
  </div>
</div>


