<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'home/atelier.jpg', alt:'' %>
      <div class="carousel-gradient"></div>
      <div class="carousel-caption">
        <div>
          <h2>Your designer career starts here</h2>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'home/fashionworkshop-home-slider.jpg', alt:'' %>
      <div class="carousel-gradient"></div>
      <div class="carousel-caption">
        <div>
          <h2>Discover young up-and-coming talents from all over the world</h2>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'home/hands-people-woman-working.jpg', alt:'' %>
      <div class="carousel-gradient"></div>
      <div class="carousel-caption">
        <div>
          <h2>Design your products, make people happy</h2>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container-fluid">
  <div class="row">
    <div class="col-lg-3 block-1">
      <%= link_to "", campaigns_path(:anchor => "trends" ), class: "link-wrapper" %>
      <span>Who wears<br>what</span>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <div class="col-lg-8 block-2">

          <%= link_to "", user_path(@user_of_the_month), class: "link-wrapper" %>
          <span><br>designer of<br>the month</span>

        </div>

        <div class="col-lg-4 block-3">
          <%= link_to "", campaigns_path(:anchor => "last"), class: "link-wrapper" %>
          <span><i class="fa fa-clock-o" aria-hidden="true"></i><br><p>Last<br>minute</p></span>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4 block-4">
        <%= link_to "", campaigns_path(:anchor => "categories"), class: "link-wrapper" %>
          <span><i class="fa fa-tags" aria-hidden="true"></i><br><p>Categories</p></span>
        </div>
        <div class="col-lg-8 block-5">
          <span>Our<br>selection</span>
        </div>
      </div>
    </div>
  </div>
</div>

